@model List<ResultQuoteDto>
@{
    ViewData["Title"] = "QuoteList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container">
    <br /><br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Alıntı</th>
            <th>Yazar</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Sentence</td>
                <td>@item.Author</td>
                <td>
                    <a href="/Quote/DeleteQuote/@item.QuoteId" class="btn btn-danger">Sil</a>
                    <a href="/Quote/UpdateQuote/@item.QuoteId" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Quote/CreateQuote" class="btn btn-primary">Yeni Alıntı</a>

</div>