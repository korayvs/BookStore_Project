@model List<ResultContactDto>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container">
    <br /><br />

    <table class="table table-striped">

        <tr>
            <th>#</th>
            <th>E posta</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Email</td>
                <td>@item.ContactAddress</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a>
                    <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Girişi</a>

</div>