@model List<ResultContactDto>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="container">
    <br /><br />

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th style="width:1%">#</th>
                <th>E-posta</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th style="width:5%">İşlemler</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Email</td>
                <td>@item.ContactAddress</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">🗑️</a>
                    <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-info">✏️</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Contact/CreateContact" class="btn btn-primary">Yenİ İletİşİm Gİrİşİ</a>

</div>