@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    ViewData["Title2"] = "Kategori Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Girişi</a>

</div>