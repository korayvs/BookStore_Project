@model List<ResultCategoryDto>
@{
    ViewData["Title"] = @_localization.GetKey("Kategoriler").Value;
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <table class="table table-bordered table-striped">

        <tr>
            <th style="width:1%">#</th>
            <th>Kategori Adı</th>
            <th style="width:5%">İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>
                    <button class="btn btn-danger" onclick="delCategory(@item.CategoryId)">🗑️</button>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">✏️</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Category/CreateCategory" class="btn btn-primary">Yenİ Kategorİ Ekle</a>

</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function delCategory(categoryId) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Category/DeleteCategory/' + categoryId;
                }
            });
        }
    </script>
}