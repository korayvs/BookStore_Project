@model List<ResultProductDto>
@{
    ViewData["Title"] = "Kitaplar";
    ViewData["Title2"] = "Kitap Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <table class="table table-bordered table-striped">

        <tr>
            <th style="width:1%">#</th>
            <th>Ürün Adı</th>
            <th>Ürün Stok</th>
            <th>Ürün Fiyatı</th>
            <th style="width:5%">İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductPrice ₺</td>
                <td>
                    <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">🗑️</a>
                    <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">✏️</a>
                </td>
            </tr>
        }

    </table>
    <a href="/Product/CreateProduct" class="btn btn-primary">Yenİ Ürün Ekle</a>

</div>