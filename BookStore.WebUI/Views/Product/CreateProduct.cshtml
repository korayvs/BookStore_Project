@model CreateProductDto
@{
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">

    <div class="container">
        <br /><br />
        <label>Ürün Resmi</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Kategorisi</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <label>Yazarı</label>
        <input type="text" asp-for="AuthorName" class="form-control" />
        <br />
        <label>Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Stok Sayısı</label>
        <input type="text" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Fiyatı</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <button class="btn btn-success">Ekle</button>
    </div>

</form>