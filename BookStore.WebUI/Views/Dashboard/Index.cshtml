    <div class="row mb-4">
        <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>@_localization.GetKey("Kitaplar").Value</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@_localization.GetKey("Kİtap Adı").Value</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">@_localization.GetKey("Yazar").Value</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@_localization.GetKey("Fİyat").Value</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">@_localization.GetKey("Stok Sayısı").Value</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in ViewBag.Last5Products)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@item.ImageUrl" class="avatar avatar-sm me-3" alt="xd">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.ProductName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="avatar-group mt-2">
                                                <h6 class="mb-0 text-sm">@item.AuthorName</h6>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="text-xs font-weight-bold">@item.ProductPrice ₺</span>
                                        </td>
                                        <td class="align-middle">
                                            @{
                                                var stockValue = (int)item.ProductStock;
                                                var progressWidth = stockValue == 0 ? 1 : (double)stockValue / 5000 * 100;
                                                string progressBarClass;
                                                if (stockValue <= 1000)
                                                {
                                                    progressBarClass = "bg-gradient-danger";
                                                }
                                                else if (stockValue <= 3000)
                                                {
                                                    progressBarClass = "bg-gradient-warning";
                                                }
                                                else
                                                {
                                                    progressBarClass = "bg-gradient-success";
                                                }
                                            }
                                            <div class="progress-wrapper w-75 mx-auto">
                                                <div class="progress-info">
                                                    <div class="progress-percentage">
                                                        <span class="text-xs font-weight-bold">@stockValue</span>
                                                    </div>
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar @progressBarClass" role="progressbar" aria-valuenow="@stockValue" aria-valuemin="0" aria-valuemax="5000" style="width: @progressWidth%"></div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
